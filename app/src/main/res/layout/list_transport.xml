<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_champs2"
            >
           <TextView
               android:id="@+id/transport"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Transport1"
               android:textColor="#F1C07E"
               android:textSize="28sp"
               android:layout_marginStart="20dp"
               android:layout_marginTop="10dp"
               >
           </TextView>
           <ImageView
               android:id="@+id/img_transport"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_alignParentEnd="true"
               android:background="@drawable/ic_android_black_24dp"
               android:layout_marginEnd="30dp"
               android:layout_marginTop="50dp"
               >

           </ImageView>

            <TextView
                android:id="@+id/descript_vehic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transport"
                android:layout_marginTop="55dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="#38E816"
                android:text="Reserver"
                android:textColor="#0D3C03"
                android:textSize="16sp">

            </TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>